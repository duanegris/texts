#!/bin/sh

k=0
if [ $1 ]
then 
    if [ $2 -d ]
    then
	`cd $2`
	if [ $1 -e ]
	then
	    #s2
	    if [ $3 ]
	    then
		taille=`ls -l | grep $1 | cut -f5 -d' '`
		echo "$1 taille : $taille"
		#s3

		
	    fi
	    
	    if [ $1 -x ]
	    then
		echo " $1 trouve "
		k=1
	    else
		echo " $1 non executable "
	    fi
	else
	    echo " fichier non trouve "
	fi
    else
	echo " parametre non conforme "
    fi
else 
    echo " parametre 1 non conforme "
fi
echo " $k "
