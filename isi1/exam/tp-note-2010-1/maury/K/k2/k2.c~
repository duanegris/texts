#include <stdio.h>
#include <unistd.h>
#include <sys/types.h>
#include <sys/stat.h>
#include <fcntl.h>
#include <ctype.h>


int main (char * str)
{
  int nb1;
  int nb2;
  int fich;
  char buf[2e24];
  if (sizeof(*str) == 0)
    printf("il faut indiquer un fichier");
  else
    {
      fich = open(str,O_RDONLY);
      printf("tapper un nombre entre 0 et 2e24\n");
      scanf("%d",&nb1);
      scanf("%d",&nb2);
      if(nb1>2e24) printf("valeur trop grande\n");
      read(*buf,&fich,nb2+1);
      read(0,&fich,nb1+1);
    }
  return 0;
}
