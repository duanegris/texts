# KAWNI
#!/bin/sh


#On vérifie que le nombre d'arguments est 2
if [ $# -ne 2 ] 
	then echo "usage <$0> arg1 arg2"  # [SG] ok mais manque exit 1


else
test1=KO
test2=OK

	for i in `ls`
	do
		if [ $i = $1 ] 
		then 
			test1=OK #si on trouve arg1 dans le répertoire courant la condition est vérifiée
		fi

		if [ $i = $2 ] 
		then 
			test2=KO  #si on trouve arg1 dans le répertoire courant la condition voulue n'est pas vérifiée
		fi

	done

	if [ $test1 = "KO" -o $test2 = "KO" ]
	then 
		if [ $test1 = "KO" ]
		then echo "L'argument 1 n'est pas un fichier du répertoire courant."
		fi

		if [ $test2 = "KO" ] 
		then echo "L'argument 2 est un fichier du repertoire courant."
		fi

		exit 2

	else
		echo "Succes"
		exit 0
	fi
fi
