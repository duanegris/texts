
module Bank {
	interface Account {
            exception UnknownAccount { string reason; };
            exception NotEnoughMoney { float balance; };

  		long   createAccount();	
  		void   deleteAccount(in long accountnum)
			raises (UnknownAccount);	
		float makeWithdrawal(in long accountnum, in float amount)
			raises (NotEnoughMoney,UnknownAccount);
		float makeDeposit(in long accountnum, in float amount)
			raises (UnknownAccount);
		float getBalance(in float accountnum)
			raises (UnknownAccount);
      };
};
