

 $ mkdir wordcount_classes
 $ export HADOOP_VERSION=0.20.2
 $ export HADOOP_HOME=$HOME/hadoop-${HADOOP_VERSION}/


 $ javac -classpath ${HADOOP_HOME}/hadoop-${HADOOP_VERSION}-core.jar:$HADOOP_HOME/lib/commons-cli-1.2.jar -d wordcount_classes WordCount.java
 $ jar -cvf wordcount.jar -C wordcount_classes/ .


 $ export JAVA_HOME=/usr/lib/jvm/java-6-openjdk/                               # Linux ubuntu 10.4
 $ export JAVA_HOME=/System/Library/Frameworks/JavaVM.framework/Versions/1.6/Home/  # MacOSX rÃ©cent


 $ cat > input
   <some text>
   ^D
 
 $  ${HADOOP_HOME}/bin/hadoop jar wordcount.jar WordCount input output     




